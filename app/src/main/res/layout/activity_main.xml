<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg_main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/addButton"
            android:drawableLeft="@drawable/add"
            android:text="@string/addnew"
            android:textColor="@color/colorSearch"
            android:shadowColor="@color/PureWhite"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="5"
            android:textSize="17dp"
            android:fontFamily="@font/msyhbd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            />

        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/searchButton"
            android:drawableRight="@drawable/search"
            android:text="@string/mapsearch"
            android:textColor="@color/colorSearch"
            android:shadowColor="@color/PureWhite"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowRadius="5"
            android:textSize="17dp"
            android:fontFamily="@font/msyhbd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="160dp"
            />


    </android.support.v7.widget.Toolbar>


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/liView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="other_months"
        app:mcv_selectionColor="#00F"
        />

</LinearLayout>
    <!--app:mcv_weekDayLabels="@array/custom_myweekdays"-->