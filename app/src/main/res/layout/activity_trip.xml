<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_main">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tool_bar">

        <Button
            android:id="@+id/more"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/more"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            />

        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/riji"
            android:text="日记"
            android:textColor="@color/danxiaqu"
            android:textSize="17dp"
            android:fontFamily="@font/msyhbd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:onClick="toDiary"
            />
        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/zuji"
            android:text="足迹"
            android:textColor="@color/danxiaqu"
            android:textSize="17dp"
            android:fontFamily="@font/msyhbd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            android:onClick="tomain"
            />
        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/xingcheng"
            android:text="行程"
            android:textColor="@color/PureWhite"
            android:textSize="17dp"
            android:fontFamily="@font/msyhbd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">
        <TextView
            android:left="0dp"
            android:top="104dp"
            android:layout_width="340dp"
            android:layout_height="307dp"
            android:gravity="center"
            android:background="@drawable/boder_kuang2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_marginTop="17dp"
            android:layout_marginLeft="41dp"
            android:fontFamily="@font/msyh"
            android:textColor="@color/black"
            android:left="20dp"
            android:top="90dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="left"
            android:text="北京"
            />
        <TextView
            android:layout_marginTop="21dp"
            android:layout_marginLeft="161dp"
            android:fontFamily="@font/msyh"
            android:textColor="@color/textColor"
            android:left="20dp"
            android:top="90dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:gravity="left"
            android:text="10000步"
            />

        <Button
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="17dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/share1"
            android:left="335dp"
            android:onClick="tocomment"
            android:top="114dp" />
        <TextView
            android:left="20dp"
            android:top="210dp"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="旅行简介：我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了我去北京了"
            />
        <View
            android:left="20dp"
            android:top="195dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="180dp"
            android:background="@color/textColor"
            />
        <TextView
            android:left="26dp"
            android:top="130dp"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:gravity="left"
            android:text="2018/01/01-2018/01/31"
            />
        <TextView
            android:left="44dp"
            android:top="410dp"
            android:layout_width="87dp"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:gravity="left"
            android:text="Your rating"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="195dp"
            />
        <RatingBar
            style="@style/MyRatingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:rating="1.0"
            android:stepSize="1.0"
            android:numStars="5"
            android:id="@+id/ratingBar"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="195dp"
            />
        <TextView
            android:left="20dp"
            android:top="210dp"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="230dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="      你这是一次有趣的旅行！~"
            />
        <Button
            android:id="@+id/edit"
            android:left="335dp"
            android:top="114dp"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/edit"
            android:layout_marginTop="187dp"
            android:layout_marginLeft="290dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:left="0dp"
            android:layout_width="375dp"
            android:layout_height="45dp"
            android:background="@color/zi"
            android:layout_marginTop="144dp"
            >
            <Button
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/shouye"
                android:text="首页"
                android:textSize="18dp"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/msyhbd"
                android:textColor="@color/danxiaqu2"
                android:onClick="tomain"
                />
            <Button
                android:layout_marginTop="0dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/add_sel"
                android:drawableLeft="@drawable/addst"
                android:layout_width="70dp"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:onClick="toAdd"
                />
            <Button
                android:layout_marginTop="0dp"
                android:layout_marginLeft="55dp"
                android:id="@+id/searchButton"
                android:text="导航"
                android:textSize="18dp"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/msyhbd"
                android:textColor="@color/danxiaqu2"
                android:onClick="toGaode"
                />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>



</RelativeLayout>