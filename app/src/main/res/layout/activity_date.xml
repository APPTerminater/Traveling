<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_date">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/backButton"
            android:drawableLeft="@drawable/back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            />
        <TextView
            android:id="@+id/showdate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"

            android:layout_marginLeft="40dp"
            android:text="2018年12月11日"
            android:textColor="@color/PureWhite"
            android:textSize="25dp"
            android:fontFamily="@font/msyhbd"
            />
        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/submitButton"
            android:text="编辑"
            android:textColor="@color/PureWhite"
            android:textSize="20dp"
            android:fontFamily="@font/msyh"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />
    </android.support.v7.widget.Toolbar>


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyhbd"
            android:text="城市"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyh"
            android:text="上海"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyhbd"
            android:text="开销"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyh"
            android:text="10000元"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />

    </TableRow>
    <RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyhbd"
            android:text="今日行走步数"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/main_text_step"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/msyh"
            android:text="0"
            android:textColor="@color/colorAdd"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/msyh"
            android:text="今天上了软件工程课程设计课哈哈哈哈哈哈哈哈假装这里有一篇很长长长长长长长长长长长长长长长长长长的游记"
            android:textColor="@color/Black"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/msyh"
            android:background="@drawable/pretend"
            android:textColor="@color/Black"
            android:textSize="20dp" />
    </RelativeLayout>


</TableLayout>