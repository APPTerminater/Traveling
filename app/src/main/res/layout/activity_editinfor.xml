<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/tool_bar">
        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/backButton"
            android:drawableLeft="@drawable/back1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            />
        <View
            android:left="4dp"
            android:top="33dp"
            android:layout_marginLeft="20dp"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/PureWhite"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="100dp"
            android:text="修改信息"
            android:textColor="@color/PureWhite"
            android:textSize="20dp"
            android:fontFamily="Microsoft Yahei"
            />

        <Button
            android:layout_marginTop="0dp"
            android:id="@+id/save"
            android:textColor="@color/PureWhite"
            android:textSize="20dp"
            android:fontFamily="@font/msyh"
            android:layout_marginLeft="90dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/save"
            android:background="@android:color/transparent"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout>
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="64dp"
            android:textSize="18dp"
            android:gravity="left"
            android:drawableLeft="@drawable/name"
            />
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="37dp"
            android:layout_height="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="64dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="昵称"
            />
        <EditText
            android:id="@+id/name"
            android:left="100dp"
            android:top="155dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/boder_kuang"
            android:hint="单行输入"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            />

    </RelativeLayout>
    <TableRow>
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="48dp"
            android:textSize="18dp"
            android:gravity="left"
            android:drawableLeft="@drawable/bushu"
            />
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="日均步数"
            />
        <EditText
            android:id="@+id/step"
            android:left="100dp"
            android:top="155dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/boder_kuang"
            android:hint="单行输入"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            />
    </TableRow>
    <RelativeLayout>
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="54dp"
            android:textSize="18dp"
            android:gravity="left"
            android:drawableLeft="@drawable/shijian"
            />
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="54dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="出生年月"
            />
        <EditText
            android:id="@+id/born"
            android:left="100dp"
            android:top="155dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/boder_kuang"
            android:hint="单行输入"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            />
        <View
            android:left="20dp"
            android:top="195dp"
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="115dp"
            android:background="@color/textColor"
            />
    </RelativeLayout>
    <RelativeLayout>
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="51dp"
            android:textSize="18dp"
            android:gravity="left"
            android:drawableLeft="@drawable/lock1"
            />
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="54dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="新密码"
            />
        <EditText
            android:id="@+id/password"
            android:left="100dp"
            android:top="155dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/boder_kuang"
            android:hint="设置密码"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            />
    </RelativeLayout>
    <RelativeLayout>
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="54dp"
            android:textSize="18dp"
            android:gravity="left"
            android:drawableLeft="@drawable/unlock"
            />
        <TextView
            android:left="20dp"
            android:top="160dp"
            android:layout_width="77dp"
            android:layout_height="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="54dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="left"
            android:text="确认密码"
            />
        <EditText
            android:id="@+id/password_agin"
            android:left="100dp"
            android:top="155dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/boder_kuang"
            android:hint="再次输入"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            />
    </RelativeLayout>
</TableLayout>







